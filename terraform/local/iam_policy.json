{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "eks:ListClusters"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "eks:DescribeCluster",
        "eks:ListNodegroups"
      ],
      "Resource": "${cluster_arn}"
    },
    {
      "Effect": "Allow",
      "Action": [
        "eks:UpdateNodegroupConfig",
        "eks:DescribeNodegroup"
      ],
      "Resource": "${nodegroup}/*"
    }
  ]
}