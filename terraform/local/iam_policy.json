{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "eks:ListClusters",
        "autoscaling:SetDesiredCapacity"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "eks:DescribeCluster"
      ],
      "Resource": "${cluster_arn}"
    },
    {
      "Effect": "Allow",
      "Action": [
        "eks:UpdateNodegroupConfig"
      ],
      "Resource": "${nodegroup}/*"
    }
  ]
}